{
    "parser": "babel-eslint",
    "ecmaFeatures": {
        "classes": true
    },
    "plugins": [
        "import"
    ],
    "extends": "airbnb",
    "settings": {
        "import/resolver": "webpack"
    },
    "globals": {
        "window": true,
        "document": true,
        "MAPCONTRIB": true,
        "$": true,
        "localStorage": true,
        "XMLHttpRequest": true,
    },
    "rules": {
        "indent": [0, 4],
        "no-underscore-dangle": 0,
        "array-bracket-spacing": 0,
        "no-console": [2, { allow: ["warn", "error"] }],
        "space-in-parens": 0,
        "no-continue": 0,
        "no-restricted-syntax": [0, "FunctionExpression", "WithStatement"],
        "brace-style": [2, "stroustrup"],
        "no-param-reassign": 0,
        "import/imports-first": 0,
    }
}

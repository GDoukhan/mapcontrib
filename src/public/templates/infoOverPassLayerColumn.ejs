<section id="info_overpass_layer_column" class="column left white">
    <header>
        <button type="button" class="btn btn-link btn-lg pull-right close_btn">
            <i class="fa fa-close"></i>
        </button>

        <h2 data-l10n-id="infoLayerColumn_title"></h2>
    </header>

    <div class="container-fluid content">
        <div class="row">
            <div class="col-xs-12 append-xs-2">
                <h3 data-l10n-id="infoLayerColumn_layerName"></h3>
                <p><%= name %></p>

                <section class="description_section hide">
                    <h3 class="prepend-xs-2" data-l10n-id="infoLayerColumn_layerDescription"></h3>
                    <p><%= description %></p>
                </section>

                <h3 class="prepend-xs-2" data-l10n-id="infoLayerColumn_layerSource"></h3>
                <p data-l10n-id="infoLayerColumn_overPass"></p>

                <h3 class="prepend-xs-2" data-l10n-id="infoLayerColumn_layerMinZoom"></h3>
                <p><%- minZoom %></p>

                <h3 class="prepend-xs-2" data-l10n-id="infoLayerColumn_layerOverPassRequest"></h3>
                <pre><%= overpassRequest %></pre>

                <section class="cache_section hide">
                    <h3 class="prepend-xs-2" data-l10n-id="infoLayerColumn_layerOverPassCache"></h3>
                    <p data-l10n-id="infoLayerColumn_layerOverPassCacheDescription"></p>
                    <p class="cache_date hide"></p>
                </section>

                <h3 class="prepend-xs-2" data-l10n-id="infoLayerColumn_geoJsonData"></h3>
                <button type="button" class="btn btn-default download_btn" data-l10n-id="infoLayerColumn_downloadData"></button>
            </div>
        </div>
    </div>
</section>

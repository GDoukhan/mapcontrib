<section id="edit_poi_layer_column" class="column right orange">
    <header>
        <button type="button" class="btn btn-link btn-lg pull-right close_btn">
            <i class="fa fa-close"></i>
        </button>

        <h2 data-l10n-id="editLayerFormColumn_title"></h2>
    </header>

    <div class="container-fluid content">
        <div class="row">
            <div class="col-xs-12">
                <form action="<%- apiPath %>?fragment=<%- fragment %>" method="post" enctype="multipart/form-data">
                    <div class="form-group append-xs-2">
                        <label for="layer_name" class="control-label" data-l10n-id="editLayerFormColumn_layerName"></label>
                        <input type="text" spellcheck="true" class="form-control" id="layer_name" value="<%- name %>">
                    </div>

                    <div class="form-group append-xs-2">
                        <label for="layer_description" class="control-label" data-l10n-id="editLayerFormColumn_layerDescription"></label>
                        <textarea spellcheck="true" class="form-control" id="layer_description" rows="2"><%- description %></textarea>
                        <div class="help-block" data-l10n-id="markdownAvailable"><a target="_blank" href="https://en.wikipedia.org/wiki/Markdown"></a></div>
                    </div>

                    <div class="form-group append-xs-2">
                        <label class="control-label" data-l10n-id="editLayerFormColumn_marker"></label>
                        <div class="marker-form-widget">
                            <div class="marker-wrapper">
                                <%= marker %>
                            </div>
                            <button type="button" class="btn btn-default edit_marker_btn" data-l10n-id="customize"></button>
                        </div>
                    </div>

                    <div class="form-group append-xs-2">
                        <label class="control-label" data-l10n-id="editLayerFormColumn_visibility"></label>
                        <div class="checkbox">
                            <input type="checkbox" id="layer_visible" value="1" checked>
                            <label for="layer_visible" data-l10n-id="editLayerFormColumn_visible"></label>
                        </div>
                    </div>

                    <div class="form-group append-xs-2">
                        <label for="layer_popup_content" class="control-label" data-l10n-id="editLayerFormColumn_layerPopupContent"></label>
                        <textarea rows="3" class="form-control font-monospace" id="layer_popup_content"><%- popupContent %></textarea>
                        <div class="help-block" data-l10n-id="markdownAvailable"><a target="_blank" href="https://en.wikipedia.org/wiki/Markdown"></a></div>
                    </div>

                    <div class="form-group append-xs-2 layer_file">
                        <label for="layer_visible" class="control-label" data-l10n-id="editLayerFormColumn_gpxFile"></label>
                        <input type="file" id="layer_file" name="layer_file" class="filestyle">
                        <div class="help-block max_file_size"><%- maxFileSize %></div>
                    </div>

                    <div class="form-group sticky-footer">
                        <button type="reset" class="btn btn-default" data-l10n-id="cancel"></button>
                        <button type="submit" class="btn btn-primary pull-right" data-l10n-id="save"></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

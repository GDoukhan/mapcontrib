<section id="edit_preset_tags_column" class="column right orange">
    <header>
        <button type="button" class="btn btn-link btn-lg pull-right close_btn">
            <i class="fa fa-close"></i>
        </button>

        <h2 data-l10n-id="editPresetTagsColumn_title"></h2>
    </header>

    <div class="container-fluid content">
        <div class="row">
            <div class="col-xs-12">
                <form>
                    <div class="form-group append-xs-2">
                        <label for="preset_name" class="control-label" data-l10n-id="editPresetTagsColumn_presetName"></label>
                        <input type="text" spellcheck="true" class="form-control" id="preset_name" value="<%- name %>">
                    </div>

                    <div class="form-group append-xs-2">
                        <label for="preset_description" class="control-label" data-l10n-id="editPresetTagsColumn_presetDescription"></label>
                        <textarea class="form-control" id="preset_description" rows="3"><%- description %></textarea>
                        <div class="help-block" data-l10n-id="markdownAvailable"><a target="_blank" href="https://en.wikipedia.org/wiki/Markdown"></a></div>
                    </div>

                    <label class="control-label" data-l10n-id="editPresetTagsColumn_presetTags"></label>
                    <div class="rg_tag_list"></div>

                    <div class="sticky-footer">
                        <button type="button" class="btn btn-default add_btn" data-l10n-id="editPresetTagsColumn_addTag"></button>
                        <button type="submit" class="btn btn-primary pull-right save_btn" data-l10n-id="save"></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

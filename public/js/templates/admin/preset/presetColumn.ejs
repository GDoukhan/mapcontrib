<section class="column right orange">
    <header>
        <button type="button" class="btn btn-link btn-lg pull-left back_btn hide">
            <i class="fa fa-chevron-left"></i>
        </button>
        <button type="button" class="btn btn-link btn-lg pull-right close_btn">
            <i class="fa fa-close"></i>
        </button>

        <h2><%= title %></h2>
    </header>

    <form>
        <div class="container-fluid content sticky">
            <div class="row sticky-inner">
                <div class="col-xs-12">
                    <div class="rg_categories_list"></div>
                    <div class="rg_list"></div>
                </div>
            </div>
            <div class="row sticky-footer">
                <div class="col-xs-12">
                    <button type="button" class="btn btn-default btn-block add_category_btn" data-l10n-id="adminPresetColumn_addPresetCategory"></button>
                    <button type="button" class="btn btn-primary btn-block add_btn" data-l10n-id="adminPresetColumn_addPreset"></button>
                </div>
            </div>
        </div>
    </form>
</section>

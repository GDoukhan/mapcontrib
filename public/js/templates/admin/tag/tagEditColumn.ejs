<section class="column right orange">
    <header>
        <button type="button" class="btn btn-link btn-lg pull-right close_btn">
            <i class="fa fa-close"></i>
        </button>

        <h2 data-l10n-id="adminTagColumn_title"></h2>
    </header>

    <form>
        <div class="container-fluid content sticky">
            <div class="row sticky-inner">
                <div class="col-xs-12">
                    <div class="form-group append-xs-2">
                        <label for="tag_key" class="control-label" data-l10n-id="key"></label>
                        <input type="text" spellcheck="false" class="form-control" id="tag_key" value="<%- key %>">
                    </div>

                    <div class="form-group append-xs-2">
                        <label class="control-label" data-l10n-id="type"></label>
                        <div class="rg_type"></div>
                    </div>

                    <div class="form-group append-xs-2">
                        <label class="control-label" data-l10n-id="locales"></label>
                        <div class="rg_locales"></div>
                    </div>
                </div>
            </div>

            <div class="row sticky-footer">
                <div class="col-xs-12">
                    <button type="reset" class="btn btn-default" data-l10n-id="cancel"></button>
                    <button type="submit" class="btn btn-primary pull-right" data-l10n-id="save"></button>
                </div>
            </div>
        </div>
    </form>
</section>
